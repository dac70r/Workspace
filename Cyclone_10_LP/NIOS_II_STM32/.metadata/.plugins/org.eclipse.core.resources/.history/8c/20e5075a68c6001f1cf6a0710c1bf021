// SPI VARIABLES
char uart_buf_spi[50];
int uart_buf_len_spi = 2;		// predefine the size of the spi traffic to be 2 bytes

#ifndef HSEM_ID_0
#define HSEM_ID_0 (0U) /* HW semaphore 0*/
#endif

/* USER CODE END PD */

